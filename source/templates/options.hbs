<div class="row">

  <div class="col-lg-4 col-md-5 col-sm-6">

  </div>

  <div class="col-lg-8 col-md-7 col-sm-6">

    <table class="table table-striped table-condensed">

      <tbody>
        {{#each languages}}
          <tr>
            <td>
              {{flag this}}
            </td>
          </tr>
        {{/each}}
      </tbody>

    </table>

    <table class="table table-striped table-condensed">

      <thead>
        <tr>
          <th>{{i18n 'plugin'}}</th>
          <th>{{i18n 'languages'}}</th>
          <th>{{i18n 'webSite'}}</th>
          <th style="width: 56px;"></th>
        </tr>
      </thead>

      <tbody>
        {{#each plugins}}
          <tr data-plugin="{{this.id}}">
            <td>
              {{this.name}}
            </td>
            <td>
              {{#each this.languages}}
                {{flag this}}
              {{else}}
                -
              {{/each}}
            </td>
            <td>
              {{this.url}}
            </td>
            <td>
              <input type="checkbox" {{#if this.enabled}}checked{{/if}} />
            </td>
          </tr>
        {{/each}}
      </tbody>

    </table>

  </div>

</div>