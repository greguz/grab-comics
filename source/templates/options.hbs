<div class="row">

  <div class="col-lg-4 col-md-5">

    <div class="page-header">
      <h3>
        {{i18n 'language' count=2}}:
      </h3>
    </div>

    <table class="table table-striped table-condensed">

      <tbody>
        {{#each config.comicsLanguages}}
          <tr>
            <td>
              {{flag this}}
            </td>
            <td class="text-right">
              {{i18n this root='languages'}}
            </td>
          </tr>
        {{/each}}
      </tbody>

    </table>

    <div class="btn-group btn-group-sm pull-right" role="group">

      <button type="button" class="btn btn-default">
        <i class="fa fa-plus"></i>
      </button>

    </div>

  </div>

  <div class="col-lg-8 col-md-7">

    <div class="page-header">
      <h3>
        {{i18n 'plugin' count=2}}:
      </h3>
    </div>

    <table class="table table-striped table-condensed">

      <thead>
        <tr>
          <th>{{i18n 'plugin'}}</th>
          <th>{{i18n 'language' count=2}}</th>
          <th>{{i18n 'website'}}</th>
          <th style="width: 56px;"></th>
        </tr>
      </thead>

      <tbody>
        {{#each plugins}}
          <tr data-plugin="{{this.id}}">
            <td>
              {{this.name}}
            </td>
            <td>
              {{#each this.languages}}
                {{flag this}}
              {{else}}
                -
              {{/each}}
            </td>
            <td>
              {{this.url}}
            </td>
            <td>
              <input type="checkbox" {{#if this.enabled}}checked{{/if}} />
            </td>
          </tr>
        {{/each}}
      </tbody>

    </table>

  </div>

</div>
