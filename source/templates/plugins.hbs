<div class="container">

  <div class="page-header">
    <h3>
      {{i18n 'plugin' count=2}}:
    </h3>
  </div>

  <table class="table table-striped table-condensed">

    <thead>
      <tr>
        <th>
          {{i18n 'plugin'}}
        </th>
        <th>
          {{i18n 'language' count=2}}
        </th>
        <th>
          {{i18n 'website'}}
        </th>
        <th class="text-right">
          {{i18n 'enable'}}
        </th>
      </tr>
    </thead>

    <tbody>
      {{#each plugins}}
        <tr data-plugin="{{this.id}}">
          <td>
            {{this.name}}
          </td>
          <td>
            {{#each this.languages}}
              {{flag this}}
            {{else}}
              -
            {{/each}}
          </td>
          <td>
            <a href="{{this.url}}" class="btnOpenWebsite">
              {{this.url}}
            </a>
          </td>
          <td width="56">
            <input type="checkbox" {{#if this.enabled}}checked{{/if}} />
          </td>
        </tr>
      {{/each}}
    </tbody>

  </table>

</div>
